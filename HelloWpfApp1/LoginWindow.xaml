<Window x:Class="HelloWpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp1"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="250" Width="400">
    <Grid Margin="20">
        <Label Content="Username" 
               Target="{Binding ElementName=txtUserName}"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,10,0,0"/>

        <Label Content="Password"
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,50,0,0"/>

        <Button x:Name="Btndangnhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="40,114,0,35" Width="122" Click="Btndangnhap_Click"/>
        <Button x:Name="btnthoat" Content="Thoát" HorizontalAlignment="Left" Margin="208,113,0,35" Width="112" Click="btnthoat_Click"/>
    </Grid>
</Window>