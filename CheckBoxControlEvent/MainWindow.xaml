<Window x:Class="CheckBoxControlEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxControlEvent"
        mc:Ignorable="d"
        Title="Check box sự kiện" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <Label>bạn thích những  gì ?</Label>
            <CheckBox Name ="chkToanBo" 
                      Checked="ChkToanBo_Checked"
                      Unchecked="ChkToanBo_Unchecked">Thích toàn bộ hoạt động</CheckBox>
            <StackPanel Margin="20,0">
                <CheckBox Name="chkCongNghe"
                          Checked="chkSub_CheckedChanged"
                          Unchecked="chkSub_CheckedChanged">
                    thích nghiên cứu công nghệ
                </CheckBox>
                <CheckBox  Name="chkDuLich" 
                    Checked="chkSub_CheckedChanged"
                    Unchecked="chkSub_CheckChanged">thích đi du lịch</CheckBox>
                <CheckBox Name="chkDaBong" 
                          Checked="chkSub_CheckedChanged"
                          Unchecked="chkSub_CheckedChanged">Thích đá bóng</CheckBox>
                <CheckBox Name ="chkXemPhim"
                          Checked="chkSub_CheckedChanged"
                          Unchecked="chkSub_CheckedChanged">Thích xem phim</CheckBox>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
